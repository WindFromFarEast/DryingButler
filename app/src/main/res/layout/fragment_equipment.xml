<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/equipment_head_bg">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的设备"
            android:textColor="#ffffff"
            android:textSize="20sp"/>

    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_equipment_empty"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="visible">

        <ImageView
            android:id="@+id/iv_equipment_empty"
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:src="@drawable/empty"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"/>

        <Button
            android:id="@+id/btn_equipment_empty_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/add_new"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_equipment_add"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="300dp"
            android:layout_height="350dp"
            android:background="@drawable/panel"
            android:layout_centerInParent="true"
            android:gravity="center">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="添加设备"
                android:textColor="@android:color/white"
                android:layout_marginTop="5dp"
                android:textSize="17sp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="设备号"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/et_equipment_number"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/text_box"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="登录码"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/et_equipment_code"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/text_box"/>

            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="备注名"
                    android:textColor="@android:color/white"
                    android:textSize="17sp"/>

                <EditText
                    android:id="@+id/et_equipment_alias"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:layout_marginLeft="10dp"
                    android:paddingLeft="10dp"
                    android:background="@drawable/text_box"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_equipment_add"
                android:layout_width="140dp"
                android:layout_height="40dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/btn_equipment_add_selector"
                android:text="添加"
                android:textColor="@drawable/text_euipment_btn_add_selector"
                android:textSize="15sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/btn_equipment_cancel_add"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/btn_equipment_cancel_add"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="30dp"
            android:layout_marginRight="30dp"/>

    </RelativeLayout>

</LinearLayout>