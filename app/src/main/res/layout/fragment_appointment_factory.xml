<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#fafafa">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="设备型号"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/et_factory_appointment_model"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:background="@drawable/factory_text_box"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题类型"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <Spinner
            android:id="@+id/spinner_factory_appointment"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/spinner_selector"
            android:spinnerMode="dropdown"
            android:overlapAnchor="false"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="烘干品种"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/et_factory_appointment_type"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:background="@drawable/factory_text_box"/>

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="问题描述"
            android:textSize="20sp"
            android:layout_margin="20dp"/>

        <EditText
            android:id="@+id/et_factory_appointment_question"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="5dp"
            android:background="@drawable/factory_text_box"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_factory_appointment_ok"
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:background="@drawable/btn_factory_selector"
        android:layout_gravity="end"
        android:layout_marginRight="10dp"
        android:text="提交"
        android:textSize="20sp"
        android:textColor="#ffffff"/>

</LinearLayout>