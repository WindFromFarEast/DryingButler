<?xml version="1.0" encoding="utf-8"?>

<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="180dp">

            <android.support.v4.view.ViewPager
                android:id="@+id/vp_fragment_communication"
                android:layout_width="match_parent"
                android:layout_height="180dp"/>

            <ImageView
                android:id="@+id/iv_fragment_communication_point3"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/point_grey"/>

            <ImageView
                android:id="@+id/iv_fragment_communication_point2"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_fragment_communication_point3"
                android:src="@drawable/point_grey"/>

            <ImageView
                android:id="@+id/iv_fragment_communication_point1"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/iv_fragment_communication_point2"
                android:src="@drawable/point_grey"/>


        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/warning_setting_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_rec_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="推荐热帖"
                    android:textColor="#646363"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/communication_unfold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rec_post_content1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_rec_post"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_rec_post1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    android:background="#fff"
                    android:src="@drawable/litchi"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="荔枝的自我修养"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="by 李客"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_rec_post_content2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_rec_post"
                android:layout_toRightOf="@id/ll_rec_post_content1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_rec_post2"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    android:background="#fff"
                    android:src="@drawable/drying"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="烘干新手教程"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="by Bin"/>

            </LinearLayout>

        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:src="@drawable/warning_setting_line"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginTop="10dp">

            <LinearLayout
                android:id="@+id/ll_latest_post"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:text="最新帖子"
                    android:textColor="#646363"
                    android:textSize="15sp"/>

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="10dp"
                    android:src="@drawable/communication_unfold"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_latest_post_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/ll_latest_post"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/iv_latest_post"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:elevation="5dp"
                    android:background="#fff"
                    android:src="@drawable/peanut"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="花生需要烘干吗"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="by xin"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

</ScrollView>
