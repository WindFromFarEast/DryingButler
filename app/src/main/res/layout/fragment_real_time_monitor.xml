<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_height="match_parent"
            android:layout_width="match_parent"
            xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="vertical"
                  android:layout_width="match_parent"
                  android:layout_height="match_parent">

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_temp"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"/>

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_humidity"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="20dp"/>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="R值"
                android:textSize="20sp"/>

            <SeekBar
                android:id="@+id/seekBar_real_time_r"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="254"/>

            <TextView
                android:id="@+id/tv_real_time_r"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="G值"
                android:textSize="20sp"/>

            <SeekBar
                android:id="@+id/seekBar_real_time_g"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="254"/>

            <TextView
                android:id="@+id/tv_real_time_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="B值"
                android:textSize="20sp"/>

            <SeekBar
                android:id="@+id/seekBar_real_time_b"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="254"/>

            <TextView
                android:id="@+id/tv_real_time_b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="电机"
                android:textSize="20sp"/>

            <SeekBar
                android:id="@+id/seekBar_real_time_motor"
                android:layout_width="300dp"
                android:layout_height="20dp"
                android:max="10"/>

            <TextView
                android:id="@+id/tv_real_time_motor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="0"/>

        </LinearLayout>

    </LinearLayout>
</ScrollView>
